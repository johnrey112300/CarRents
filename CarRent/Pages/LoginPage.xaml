<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             x:Class="CarRent.Pages.LoginPage"
             Title="">
    <VerticalStackLayout>
        <skia:SKLottieView Source="login.json"
                           RepeatCount="-1"
                           WidthRequest="300"
                           HeightRequest="300"/>
        <Entry x:Name="entryEmails" Placeholder="Emails" VerticalOptions="CenterAndExpand"/>
        <Entry x:Name="entryPassword" Placeholder="Password" VerticalOptions="CenterAndExpand"/>
        
            <Button x:Name="btnlogin" Text="Login" Clicked="btnlogin_Clicked" VerticalOptions="Center"/>
             <Button x:Name="btnsignup" Text="SignUp" Clicked="btnsignup_Clicked_1" VerticalOptions="Center"/>
      


    </VerticalStackLayout>
    
</ContentPage>